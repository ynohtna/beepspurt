{
  "name": "beepspurt",
  "version": "0.0.1",
  "description": "Simple Syphon server for projecting textual messages received over OSC at [beep] gigs.",
  "main": "dist/beepspurt.js",
  "jsnext:main": "src/main.js",
  "scripts": {
    "clean": "rimraf ./dist/",
    "start": "npm run start:prod",
    "start:prod": "env NODE_ENV=production ./plask.sh ./dist/beepspurt.min.js",
    "start:dev": "env NODE_ENV=dev ./plaskdbg.sh ./dist/beepspurt.js",
    "start:debug": "env NODE_ENV=dev ./plaskdbg.sh debug ./dist/beepspurt.js",
    "build": "npm run clean && mkdirp dist && npm run build:js:all && npm run build:plask:all",
    "build:dev:all": "npm run build:plask:dev && npm run build:js:dev",
    "build:prod:all": "npm run build:plask:prod && npm run build:js:prod",
    "build:js:all": "npm run build:js:dev && npm run build:js:prod",
    "build:js:dev": "babel-node ./rollup.config.js dev",
    "build:js:prod": "babel-node ./rollup.config.js prod",
    "build:plask:all": "npm run build:plask:dev && npm run build:plask:prod",
    "build:plask:dev": "cd plask && ./xcodebuild.sh Debug",
    "build:plask:prod": "cd plask && ./xcodebuild.sh Release",
    "lint": "eslint ./src/**/*.js && { echo '\\033[0;92m√ SUCCESS √\\033[0m'; echo; } || true",
    "lint:tests": "eslint ./src/**/*__tests__*/**/*.js && { echo '\\033[0;92m√ SUCCESS √\\033[0m'; echo; } || true",
    "lint:src": "eslint src/ && { echo '\\033[0;92m√ SUCCESS √\\033[0m'; echo; } || true",
    "packages": "npm list --depth=0",
    "package:purge": "rimraf ./node_modules",
    "package:reinstall": "npm run package:purge && npm install",
    "package:check": "ncu",
    "package:upgrade": "ncu -u",
    "package:prod": "ncu -u",
    "package:dev": "ncu -p -u",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ynohtna/beepspurt.git"
  },
  "keywords": [
    "plask",
    "syphon",
    "osc",
    "beep"
  ],
  "author": "Anthony Bowyer-Lowe <anthony@lowbroweye.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ynohtna/beepspurt/issues"
  },
  "homepage": "https://github.com/ynohtna/beepspurt#readme",
  "devDependencies": {
    "babel-cli": "^6.6.5",
    "babel-eslint": "^6.0.0-beta.6",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-es2015-rollup": "^1.1.1",
    "eslint": "^2.4.0",
    "eslint-config-airbnb": "^6.1.0",
    "eslint-plugin-react": "^4.2.3",
    "mkdirp": "^0.5.1",
    "npm-check-updates": "^2.5.8",
    "rimraf": "^2.5.2",
    "rollup": "^0.25.4",
    "rollup-plugin-babel": "^2.4.0",
    "rollup-plugin-eslint": "^2.0.0",
    "rollup-plugin-filesize": "^0.2.1",
    "rollup-plugin-uglify": "^0.3.1"
  }
}
