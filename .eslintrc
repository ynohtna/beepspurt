{
  "throwError": true,
  "extends": ["airbnb/base", "plugin:react/recommended"],
  "env": {
    "browser": true,
    "node": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "arrow-body-style": 1,
    "comma-dangle": [2, "never"],
    "indent": [2, 2, {"SwitchCase": 1}],
    "jsx-quotes": [1, "prefer-single"],
    "react/jsx-no-bind": [1, { "allowArrowFunctions": true }],
    "no-console": 1,
	"no-unused-vars": 1,
    "prefer-const": 1
  }
}
